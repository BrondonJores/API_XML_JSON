<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Service Menu Cantine</display-name>
    <description>Service de gestion des menus de la cantine</description>

    <!-- Configuration du servlet MealServlet -->
    <servlet>
        <servlet-name>MealServlet</servlet-name>
        <servlet-class>com.canteen.menu.servlets.MealServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>MealServlet</servlet-name>
        <url-pattern>/api/meals/*</url-pattern>
    </servlet-mapping>

    <!-- Configuration du servlet MenuServlet -->
    <servlet>
        <servlet-name>MenuServlet</servlet-name>
        <servlet-class>com.canteen.menu.servlets.MenuServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>MenuServlet</servlet-name>
        <url-pattern>/api/menu/*</url-pattern>
    </servlet-mapping>

    <!-- Configuration du servlet CategoryServlet -->
    <servlet>
        <servlet-name>CategoryServlet</servlet-name>
        <servlet-class>com.canteen.menu.servlets.CategoryServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>CategoryServlet</servlet-name>
        <url-pattern>/api/categories/*</url-pattern>
    </servlet-mapping>

    <!-- Configuration du servlet XmlExportServlet -->
    <servlet>
        <servlet-name>XmlExportServlet</servlet-name>
        <servlet-class>com.canteen.menu.servlets.XmlExportServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>XmlExportServlet</servlet-name>
        <url-pattern>/api/export/xml</url-pattern>
    </servlet-mapping>

    <!-- Configuration du servlet XmlValidationServlet -->
    <servlet>
        <servlet-name>XmlValidationServlet</servlet-name>
        <servlet-class>com.canteen.menu.servlets.XmlValidationServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>XmlValidationServlet</servlet-name>
        <url-pattern>/api/validate/xml</url-pattern>
    </servlet-mapping>

    <!-- Configuration du servlet XsltTransformServlet -->
    <servlet>
        <servlet-name>XsltTransformServlet</servlet-name>
        <servlet-class>com.canteen.menu.servlets.XsltTransformServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>XsltTransformServlet</servlet-name>
        <url-pattern>/api/transform/xslt</url-pattern>
    </servlet-mapping>

    <!-- Configuration CORS pour permettre les requetes cross-origin -->
    <filter>
        <filter-name>CorsFilter</filter-name>
        <filter-class>com.canteen.menu.filters.CorsFilter</filter-class>
    </filter>
    
    <filter-mapping>
        <filter-name>CorsFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- Page d'accueil -->
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <!-- Configuration des erreurs -->
    <error-page>
        <error-code>404</error-code>
        <location>/error/404.html</location>
    </error-page>
    
    <error-page>
        <error-code>500</error-code>
        <location>/error/500.html</location>
    </error-page>

</web-app>
